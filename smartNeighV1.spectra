spec TrafficLight

//Environment controlled input variables (sensors)
env boolean carMain;
env boolean carSide;

//System controlled output variables (lights)
sys boolean greenMain;
sys boolean greenSide;

asm GF carSide;
asm GF carMain;

gar G !(greenMain & greenSide);
gar G !greenSide;

//gar GF carSide & greenSide;
//gar GF carMain & greenMain;
gar GF (carSide & greenSide) | (carMain & greenMain);